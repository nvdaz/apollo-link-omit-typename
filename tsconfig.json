{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "isolatedModules": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist/main"
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/__tests__/*"
  ]
}