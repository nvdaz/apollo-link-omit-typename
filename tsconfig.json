{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "importHelpers": true,
    "removeComments": true,
    "isolatedModules": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"],
  "exclude": ["src/**/__tests__/*"]
}